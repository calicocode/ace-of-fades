<section class="mx-20 my-10">
<h1>Manage Styles Page for Admins Only</h1>

<br>

<!-- You can open the modal using ID.showModal() method -->
<button class="btn" onclick="my_modal_3.showModal()">Create New</button>
<dialog id="my_modal_3" class="modal">
  <form method="dialog" class="modal-box">
    <button for="my-modal-3" class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
<p>
<button class="btn">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
  Beard
</button>

</p>

<p>
<button class="btn">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
  Hair
</button>

</p>

  </form>
</dialog>

<br>
<br>

<div class="overflow-x-auto">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <th>
          <label>
            <input type="checkbox" class="checkbox" />
          </label>
        </th>
        <th>Name</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <!-- row 1 -->
      {{#each styles}}
      <tr>
        <th>
          <label>
            <input type="checkbox" class="checkbox" />
          </label>
        </th>
        <td>
          <div class="flex items-center space-x-3">
            <div class="avatar">
              <div class="mask mask-squircle w-12 h-12">
                
                <img src="{{this.primaryImage}}" alt="Avatar Tailwind CSS Component" />
              </div>
            </div>
            <div>



              <div class="font-bold"> {{#if this.beardStyle}} {{this.beardStyle}} {{/if}}
                {{#if this.hairStyle}} {{this.hairStyle}} {{/if}}
 
              </div>
            </div>
          </div>
        </td>
        <td>
         {{this.description}}
          <br/>
                  
        </td>
   
        <th>

            <a href="/manage-styles/{{this._id}}/edit">
          <button class="btn btn-ghost btn-xs">details</button>
          </a>
  
        </th>
{{/each}}
      </tr>

  </table>
</div>


</section>



