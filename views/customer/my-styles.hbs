<section class="flex items-start justify-center p-10">
  <div class="bg-gray-100 flex rounded-2xl shadow-lg max-w-3xl p-5">
    <div id="login-form" class="md:w-1/2 bg-white-600">
      <div class="w-96 p-6 shadow-lh bg-gray-100 rounded-md flex flex-col">
        <h1 class="text-3xl block text-center font-semibold">
          Upload Your Style</h1>
        <hr class="mt-3" />

        <form
          action="/my-styles"
          method="POST"
          enctype="multipart/form-data"
          id="my-styles" >
        
          <div class="mt-3">
            <label class="block text-base mb-2">
              Title
              <input
                type="text"
                name="title"
                placeholder="What's your style called?"
                class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
              />
            </label>
          </div>
          <div class="mt-3">
            <label class="block text-base mb-2">
              Slogan
              <input
                type="text"
                name="slogan"
                placeholder="Enter Slogan"
                class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
              />
            </label>
          </div>
          <div>
            <label class="block text-base mb-2">
              Upload Image
              <input
                type="file"
                name="imageURL"
                class="file-input border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"/>
            </label>
          </div>
          
          <button
            class="border-2 border-gray-700 bg-gray-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-[#FF5178] font-semibold"
            type="submit"
            value="Submit"
          >Upload</button>
           </form>
          {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
          {{/if}}
</section>

<section class="p-10">

  <div class="flex flex-wrap justify-around">
    <div class="flex">
      {{#each myStyles.myUploadedStyles}}

        <div class="m-10 p-5 w-card w-96 shadow-2xl">
          <div class="font-semibold">
            {{this.title}}
          </div>
            {{this.slogan}}
              <img src="{{this.imageURL}}"/>
        </div>
              <div class="card-body">

                <div class="card-actions">

                </div>
              </div>
      {{/each}}
    </div>
  </div>
</section>

<section class="my-5 flex flex-row flex-wrap justify-around">
  <div class="pb-10 pl-10">
    <a
      href="/manage-styles/create-beard-style"
      class="bg-[#FF5178] text-white px-5 py-2 rounded-full hover:bg-gray-700"
    >Create new beard</a>
  </div>
  <div class="pb-10 pl-10">
    <a
      href="/my-styles"
      class="bg-[#FF5178] text-white px-5 py-2 rounded-full hover:bg-gray-700"
    >Upload your style</a>
  </div>
  <div class="pb-10 pl-10">
    <a
      href="/all-styles"
      class="bg-[#FF5178] text-white px-5 py-2 rounded-full hover:bg-gray-700"
    >Our customers styles</a>
  </div>
</section>