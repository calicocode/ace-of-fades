<div
  id="login-form"
  class="flex justify-center items-center h-screen bg-white-600"
>
  <div class="w-96 p-6 shadow-lh bg-gray-100 rounded-md">
    <h1 class="text-3xl block text-center font-semibold"><i
        class="fa-solid fa-user"
      ></i>
      Log In</h1>
    <hr class="mt-3" />
    <form action="/auth/login" method="POST">
      <div class="mt-3">
        <label class="block text-base mb-2">
          Name
          <input
            type="text"
            name="name"
            placeholder="John Doe"
            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
          />
        </label>
      </div>
      <div class="mt-3">
        <label class="block text-base mb-2">
          E-mail
          <input
            type="email"
            name="email"
            placeholder="john@doe.com"
            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
          />
        </label>
      </div>
      <div class="mt-3">
        <label class="block text-base mb-2">
          Password
          <input
            type="password"
            name="password"
            placeholder="**********"
            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
          />
        </label>
      </div>
      <div class="mt-5">
        <button
          class="border-2 border-gray-700 bg-gray-700 text-white py-1 w-full"
          type="submit"
        >Log In</button>
      </div>
      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>
</div>